{% extends '_templates/base.njk' %}

{% block page_title %}Tours{% endblock %}

{% block page_description %}The touring history of the band Queen.{% endblock %}

{% block content %}
<div class="container">
    <h1>Queen Tours</h1>
  <h6>Here is a table of the bands tour dates in 2022.</h6>
  <table class="table table-bordered  table-striped">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">City</th>
        <th scope="col">Venue</th>
      </tr>
    </thead>
    <tbody>
      {% for tour in queen.tour %}
      <tr>
        <td>{{ tour.date }}</td>
        <td>{{ tour.city }}</td>
        <td>{{ tour.venue }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
