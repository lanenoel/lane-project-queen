{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ title }} by Lane Rice{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
          <img src="../img/{{ image }}.jpg" alt="" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1>{{ title }}</h1>
          <p>{{ year | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}
